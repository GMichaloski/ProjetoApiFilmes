generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model User {
  id       Int    @id @default(autoincrement())
  email    String @unique
  password String
}

model Movie {
  id Int @id @default(autoincrement())
  title String
  description String
  gender Gender @relation(fields: [gender_id], references: [id])
  gender_id Int
  user_id Int
}

model Gender {
  id Int @id @default(autoincrement())
  name String
  movies Movie[]
}